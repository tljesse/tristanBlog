<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA=Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="<%= page.description ? page.description : config.description %>">
	<meta name="author" content="<%= config.author %>">
	<% if (theme.keywords) { %><meta name="keywords" content="<%= theme.keywords %>"><% } %>

	<link rel="icon" href="favicon/favicon.ico">
	<meta property="og:site_name" content="<%= config.title %>">
	<% if (config.subtitle){ %>
		<meta property="og:title" content="<%= config.subtitle %>">
	<% } %>
	<meta property="og:url" content="<%= config.url %>">
	<meta property="og:type" content="website">

	<%
		var title = config.title; 
		if (page.title || page.category || page.tag || page.archive) { 
			var title = '';
			if (page.category) title = page.category + ' | ' + config.title;
			if (page.tag) title = 'Tags ' + page.tag + ' | ' + config.title;
			if (page.archive){
				if (page.year) {
					title = 'Blog ';
					var month = '';
					if (page.month) {
						var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
						month = monthNames[page.month - 1];
					}
					title += month + ' ' + page.year + ' | ' + config.title;
				}
				else {
					title = 'Blog | ' + config.title ;
				}
			}
			if (page.title) title = page.title + ' | ' + config.title;
		} %>

	<title><%= title %></title>

	<%- css('css/normalize.css') %>
  <%- css('css/style.css') %>
  <%- css('css/font-awesome.css') %>

  <link href="https://fonts.googleapis.com/css?family=Bellefair|Pacifico|Permanent+Marker|Yellowtail" rel="stylesheet">
  <link href="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.css" rel="stylesheet">
	<script src="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.js"></script>
	<%- partial('google-analytics') %>
</head>